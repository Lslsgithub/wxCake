page{
  height: 100%
}
.shop_class{
  width: 100%;
	height: 100%;
	display: flex;
  overflow: hidden
}
.nav_left {
	width: 30%;
  height: 100%;
	background: #F6F6F9;
}
.nav_left .text_left{
  width: 100%;
  height: 100%;
  padding: 20rpx 0;
  color: #7c7c7c;
	font-size: 14px;
	text-align: center;  
}

.nav_right {
	width: 70%;
	background: #fff;
	padding: 10px;
  overflow: auto;
}
.cell image{
  width: 400rpx;
  height: 250rpx
}
.cell .price{
  color: red;
}
/*选中后的状态*/
.active{
  border-left:5rpx solid red; 
  background-color: white
}