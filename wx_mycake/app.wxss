/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
/*功能一：通用样式箭头*/
.arrow{
  display: flex;
  justify-content: space-between;
  align-items: center
}
.arrow::after{
  content: "";
  width: 15rpx;
  height: 15rpx;
  border-top:1px solid #000;
  border-right:1px solid #000;
  transform: rotate(45deg);
}

/*功能二：分割线*/
.divider{
  width: 100%;
  height: 20rpx;
  background-color: #ddd
}

/*功能三：通用项目条*/
.cell{
  background-color: #fff;
  font-size: 16px;
}
.cell-item{
  border-bottom: 1rpx solid #ddd;
  padding: 20rpx 30rpx;
}

/*功能四：解决单行过长换行的问题*/
.ell{
  overflow: hidden; /*超出范围隐藏*/
  white-space: nowrap; /*设置不允许换行*/
  text-overflow: ellipsis; /*超出部分添加...*/
}


